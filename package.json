		"@types/bun": "^1.1.13",
		"@types/eslint": "^9.6.1",
		"@types/eslint-config-prettier": "^6.11.3",
		"bits-ui": "1.0.0-next.45",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"daisyui": "^5.0.0-alpha.39",
		"drizzle-kit": "^0.26.2",
		"eslint": "^9.13.0",

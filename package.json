		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"super-sitemap": "^0.15.1",
		"svelte": "^5.1.1",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-check": "^4.0.5",
		"sveltekit-superforms": "2.20.0",
